<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_layout">

    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/calendar"
        android:background="#e9e9e9"
        android:contextClickable="true">
    </CalendarView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/cal_data"
        app:layout_constraintTop_toBottomOf="@id/calendar"
        android:text="null"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18dp"
        android:background="@drawable/cal_input_text_custom">
    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toBottomOf="@id/cal_data"
        android:id="@+id/recycler"
        android:visibility="visible">
    </androidx.recyclerview.widget.RecyclerView>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/edit_custom"
        android:hint="일정을 추가해주세요"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="45dp">
    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="65dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/edit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_custom"
        android:text="추가"
        android:id="@+id/cal_btn"
        android:textColor="@color/black">

    </androidx.appcompat.widget.AppCompatButton>
</androidx.constraintlayout.widget.ConstraintLayout>